source :rubygems

group :rake do
  gem 'rake'
end

gem 'thor'
gem 'activesupport'

# Testing
group :test do
  gem 'rspec'
  gem 'simplecov', require: false
  gem 'guard-rspec'
end

# CI
group :ci do
  gem 'ci_reporter', require: false
end

# Documentation
group :doc do
  gem 'yard'
  gem 'rdiscount'
end

# Debugging
group :debug do
  gem 'debugger'
end
