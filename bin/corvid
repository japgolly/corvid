#!/usr/bin/env ruby

require_relative '../lib/corvid/environment'
require 'thor'

# Load generators
Dir["#{CORVID_ROOT}/lib/corvid/generators/**/*.rb"].each {|f| Thor::Util.load_thorfile f }

# Show available tasks by default
ARGV<< '-T' if ARGV.empty?

require 'thor/runner'
$thor_runner = true
Thor::Runner.start

