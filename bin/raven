#!/usr/bin/env ruby

require_relative '../lib/raven/environment'
require 'thor'

# Load generators
Dir["#{RAVEN_ROOT}/lib/raven/generators/**/*.rb"].each {|f| Thor::Util.load_thorfile f }

# Show available tasks by default
ARGV<< '-T' if ARGV.empty?

require 'thor/runner'
$thor_runner = true
Thor::Runner.start

